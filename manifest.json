{
  "manifest_version": 3,
  "name": "A Invest Fellow",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_title": "Popup",
    "default_popup": "index.html#popup",
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/main.tsx"],
      "media": []
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
